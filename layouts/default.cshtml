@using System.Linq
@helper PostDate(DateTime rawDate) {
    <time datetime="@rawDate.ToString("yyyy'-'MM'-'dd'T'HH':'mm':'ss")" pubdate data-updated="true">@rawDate.ToString("MMM d, yyyy")</time>
}

<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <title>AspectF#</title>
    <link rel="stylesheet" href="@Model.Root/stylesheets/styles.css">
    <link rel="stylesheet" href="@Model.Root/stylesheets/pygment_trac.css">
    <link rel="shortcut icon" href="@Model.Root/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- FSharp.Formatting Styles -->
  	<link rel="stylesheet" type="text/css" media="screen" href="@Model.Root/fsharp.formatting/tooltips.css" />
  	<script type="text/javascript" src="@Model.Root/fsharp.formatting/tooltips.js"></script>
    <script type="text/javascript" src="//cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
    <script language="javascript" type="text/javascript">
        function init()
        {
            websocket = new WebSocket("ws://localhost:8080/websocket");
            websocket.onmessage = function(evt) { location.reload(); };
        }
        window.addEventListener("load", init, false);
    </script>
  </head>
  <body>
  	<div class="wrapper">
	  <header>
	  	  <a href="@Model.Root/index.html" class="falseheader">AspectF#</a>
        <p>AspectF# - .NET F#-based Aspect-oriented Functional Programming Language</p>

        <p class="view"><a href="https://github.com/NaseUkolyCZ/aspectfsharp">View the Project on GitHub</a></p>
        <ul>
          <li><a href="https://github.com/NaseUkolyCZ/aspectfsharp">View On <strong>GitHub</strong></a></li>
          <li><a href="https://github.com/NaseUkolyCZ/aspectfsharp/issues">Report a <strong>Bug</strong></a></li>
          <li><a href="https://github.com/NaseUkolyCZ/aspectfsharp/issues/milestones">Check <strong>Progress</strong></a></li>
        </ul>
        <h2>Recent posts</h2>
        @foreach (var post in Enumerable.Take(Model.Posts, 5))
    		{
    		    <h3 class="h2link"><a href="@Model.Root/blog/@post.Url/index.html">@post.Title</a></h3>
    		    <p class="view"><small>@PostDate(post.Date)</small><br />@post.Abstract</p>
    		}
      </header>
      <section>
		    @RenderBody()
      </section>
      <footer>
        <p>This project is maintained by <a href="https://twitter.com/FakeCRM">David Podhola</a></p>
        <p><small>Hosted on GitHub Pages &mdash; Theme by <a href="https://github.com/orderedlist">orderedlist</a></small></p>
      </footer>
  	</div>
    <script src="@Model.Root/javascripts/scale.fix.js"></script>
	<script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
	
	  ga('create', 'UA-24060419-4', 'auto');
	  ga('send', 'pageview');
	
	</script>      </body>
</html>
